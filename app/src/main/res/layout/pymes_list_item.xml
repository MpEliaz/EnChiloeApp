<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:id="@+id/img_pyme_list"
            android:src="@drawable/quellon"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Patagonia Insular"
                android:id="@+id/txt_pyme_nombre_list"
                android:textColor="@color/negro"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold|italic"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curaco de Velez"
                android:id="@+id/txt_pyme_comuna_list"
                android:layout_below="@+id/txt_pyme_nombre_list"
                android:layout_alignLeft="@+id/txt_pyme_nombre_list"
                android:layout_alignStart="@+id/txt_pyme_nombre_list"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="una descripcion corta para atraer al cliente a elegir tu servicio y si el texto es demasiado largo se corta automaticamente"
                android:id="@+id/txt_pyme_desc_list"
                android:layout_below="@+id/txt_pyme_comuna_list"
                android:layout_alignLeft="@+id/txt_pyme_comuna_list"
                android:layout_alignStart="@+id/txt_pyme_comuna_list"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginRight="5dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_pyme"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txt_pyme_desc_list"
                android:layout_alignStart="@+id/txt_pyme_desc_list"
                android:layout_marginBottom="5dp" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>